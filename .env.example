# 班组管理系统 - 环境变量配置示例
# 复制此文件为 .env 并修改为您的实际值

# ==================== 管理员账户配置 ====================
# 首次运行时创建的默认管理员账户
APP_USER=admin
APP_PASS=your_secure_password_here

# ==================== 应用配置 ====================
# Flask 密钥（生产环境必须修改为随机值）
# 生成方法: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your_secret_key_here

# 应用运行端口
PORT=5001

# ==================== MySQL 数据库配置 ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=team_management
MYSQL_CHARSET=utf8mb4

# ==================== 文件存储配置 ====================
# 上传文件存储目录
UPLOAD_DIR=uploads

# 导出文件存储目录
EXPORT_DIR=exports

# 上传文件大小限制（字节，默认 50MB）
MAX_CONTENT_LENGTH=52428800

# ==================== 安全配置 ====================
# 是否启用调试模式（生产环境必须设置为 False）
DEBUG=False

# Session 过期时间（秒）
SESSION_TIMEOUT=86400

# ==================== 其他配置 ====================
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==================== 钉钉免登配置 ====================
DINGTALK_APP_KEY=your_dingtalk_app_key
DINGTALK_APP_SECRET=your_dingtalk_app_secret
DINGTALK_CORP_ID=your_dingtalk_corp_id
